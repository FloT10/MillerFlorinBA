<?xml version="1.0" encoding="UTF-8"?>
<formblatt_6.2>
    <tabelle_kopf>
        <zeile1>Antragsunterlage für immissionsschutzrechtliches Genehmigungsverfahren</zeile1>
        <zeile2>Anlage 1 / Formblatt 6.2</zeile2>
        <zeile3>Detailangaben / Wassergefährdende Stoffe</zeile3>
    </tabelle_kopf>

    <ueberschrift>Detailangaben Wassergefährdende Stoffe, Löschwasserrückhaltung</ueberschrift>
    <unterueberschrift>Hinweis: Für jede Anlage ist ein eigenes Formblatt auszufüllen.</unterueberschrift>

    <tabelle_angaben_anlage>
        <spalte>
            <zeile2>Anlagenbezeichnung</zeile2>
            <zeile1>Anlagenart</zeile1>
            <zeile3>Anlagenbeschreibung</zeile3>
        </spalte>
        <spalte>
            <zeile2>{anlagenbezeichnung}</zeile2>
            <zeile1>{anlagenart}</zeile1>
            <zeile3>{anlagenbeschreibung}</zeile3>
        </spalte>
    </tabelle_angaben_anlage>

    <tabelle_standort_anlage>
        <spalte>
            <zeile1>Heilquellenschutzgebiet</zeile1>
            <zeile2>Wasserschutzgebiet</zeile2>
            <zeile3>Überschwemmungsgebiet</zeile3>
        </spalte>
        <spalte>
            <zeile1>{heilquellenschutzgebiet}</zeile1>
            <zeile2>{wasserschutzgebiet}</zeile2>
            <zeile3>{ueberschwemmungsgebiet}</zeile3>
        </spalte>
    </tabelle_standort_anlage>

    <tabelle_wassergefaehrdende_stoffe>
        <spalten>
            <spalte>Stoff</spalte>
            <spalte>Aggregatzustand</spalte>
            <spalte>WGK</spalte>
            <spalte>Volumen/Masse</spalte>
        </spalten>
        <daten>
            <!-- Daten für die erste Zeile -->
            <zeile>
                <wert>{stoff1}</wert>
                <wert>{aggregatzustand1}</wert>
                <wert>{wgk1}</wert>
                <wert>{volumen_masse1}</wert>
            </zeile>
            <!-- Daten für die zweite Zeile -->
            <zeile>
                <wert>{stoff2}</wert>
                <wert>{aggregatzustand2}</wert>
                <wert>{wgk2}</wert>
                <wert>{volumen_masse2}</wert>
            </zeile>
            <!-- Weitere Daten für weitere Zeilen können hier hinzugefügt werden -->
        </daten>
    </tabelle_wassergefaehrdende_stoffe>

    <tabelle_gefaehrdungsstufe>
        <spalte>
            <zeile1>Maßgebendes Volumen/Masse</zeile1>
            <zeile2>Maßgebende WGK</zeile2>
            <zeile3>Gefährdungsstufe</zeile3>
        </spalte>
        <spalte>
            <zeile1>{massg_volumen_masse}</zeile1>
            <zeile2>{massg_wgk}</zeile2>
            <zeile3>{gefaehrdungsstufe}</zeile3>
        </spalte>
    </tabelle_gefaehrdungsstufe>

    <auswahl_aufstellung>
        <ueberschrift>Aufstellung der Anlage</ueberschrift>
        
        <option>
            <kasten aufstellung="false">Unterirdisch</kasten>
        </option>
        
        <option>
            <kasten aufstellung="false">Oberirdisch im Gebäude</kasten>
        </option>
        
        <option>
            <kasten aufstellung="false">Oberirdisch im Freien</kasten>
        </option>
        
        <option>
            <kasten aufstellung="false">Oberirdisch im Freien mit Überdachung</kasten>
        </option>
    </auswahl_aufstellung>

    <tabelle_behaelter>
        <spalten>
            <spalte>Herstellernummer</spalte>
            <spalte>Stoff</spalte>
            <spalte>Nennvolumen</spalte>
            <spalte>einwandig/doppelwandig</spalte>
            <spalte>Werkstoff</spalte>
            <spalte>bauaufsichtlicher Verwendbarkeitsnachweis</spalte>
        </spalten>
        <daten>
            <!-- Daten für die erste Zeile -->
            <zeile>
                <wert>{herstellernummer1}</wert>
                <wert>{stoff1}</wert>
                <wert>{nennvolumen1}</wert>
                <wert>{einwandig_doppelwandig1}</wert>
                <wert>{werkstoff1}</wert>
                <wert>{verwendbarkeitsnachweis1}</wert>
            </zeile>
            <!-- Daten für die zweite Zeile -->
            <zeile>
                <wert>{herstellernummer2}</wert>
                <wert>{stoff2}</wert>
                <wert>{nennvolumen2}</wert>
                <wert>{einwandig_doppelwandig2}</wert>
                <wert>{werkstoff2}</wert>
                <wert>{verwendbarkeitsnachweis2}</wert>
            </zeile>
            <!-- Weitere Daten für weitere Zeilen können hier hinzugefügt werden -->
        </daten>
    </tabelle_behaelter>

    <tabelle_sicherheitseinrichtungen>
        <spalten>
            <spalte>Ankreuzen</spalte>
            <spalte>Sicherheitseinrichtung</spalte>
            <spalte>Bauaufsichtlicher Verwendbarkeitsnachweis / sonstige Informationen</spalte>
            <spalte>Rückhaltevolumen</spalte>
            <spalte>Werkstoff</spalte>
        </spalten>
        <daten>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Leckanzeigegerät</wert>
                <wert>{verwendbarkeitsnachweis1}</wert>
                <wert>-</wert> <!-- Rückhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Überfüllsicherung</wert>
                <wert>{verwendbarkeitsnachweis2}</wert>
                <wert>-</wert> <!-- Rückhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Rückhalteeinrichtung</wert>
                <wert>{verwendbarkeitsnachweis3}</wert>
                <wert>{rueckhaltevolumen}</wert> <!-- Rückhaltevolumen relevant -->
                <wert>{werkstoff_rueckhalteeinrichtung}</wert> <!-- Werkstoff relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Leckagesensor</wert>
                <wert>{verwendbarkeitsnachweis4}</wert>
                <wert>-</wert> <!-- Rückhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Löschwasserrückhaltung</wert>
                <wert>{verwendbarkeitsnachweis5}</wert>
                <wert>{rueckhaltevolumen_loeschwasser}</wert> <!-- Rückhaltevolumen relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Sonstige/Organisatorische</wert>
                <wert>{verwendbarkeitsnachweis6}</wert>
                <wert>-</wert> <!-- Rückhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
        </daten>
    </tabelle_sicherheitseinrichtungen>
</formblatt_6.2>
