<?xml version="1.0" encoding="UTF-8"?>
<formblatt_6.2>
    <tabelle_kopf>
        <zeile1>Antragsunterlage fuer immissionsschutzrechtliches Genehmigungsverfahren</zeile1>
        <zeile2>Anlage 1 / Formblatt 6.2</zeile2>
        <zeile3>Detailangaben / Wassergefaehrdende Stoffe</zeile3>
    </tabelle_kopf>

    <ueberschrift>Detailangaben Wassergefaehrdende Stoffe, Loeschwasserrueckhaltung</ueberschrift>
    <unterueberschrift>Hinweis: Fuer jede Anlage ist ein eigenes Formblatt auszufuellen.</unterueberschrift>

    <tabelle_angaben_anlage>
        <ueberschrift>Angaben zur Anlage</ueberschrift>
        <spalte>
            <zeile2>Anlagenbezeichnung</zeile2>
            <zeile1>Anlagenart</zeile1>
            <zeile3>Anlagenbeschreibung</zeile3>
        </spalte>
        <spalte>
            <anlagenbezeichnung>{anlagenbezeichnung}</anlagenbezeichnung>
            <zeile1>{anlagenart}</zeile1>
            <zeile3>{anlagenbeschreibung}</zeile3>
        </spalte>
    </tabelle_angaben_anlage>

    <tabelle_standort_anlage>
        <ueberschrift>Angaben zum Standort der Anlage</ueberschrift>
        <spalte>
            <zeile1>Heilquellenschutzgebiet</zeile1>
            <zeile2>Wasserschutzgebiet</zeile2>
            <zeile3>ueberschwemmungsgebiet</zeile3>
        </spalte>
        <spalte>
            <zeile1>{heilquellenschutzgebiet}</zeile1>
            <zeile2>{wasserschutzgebiet}</zeile2>
            <zeile3>{ueberschwemmungsgebiet}</zeile3>
        </spalte>
    </tabelle_standort_anlage>

    <tabelle_wassergefaehrdende_stoffe>
        <ueberschrift>Angaben zu den wassergefaehrdenden Stoffen in der Anlage</ueberschrift>
        <spalten>
            <spalte>Stoff</spalte>
            <spalte>Aggregatzustand</spalte>
            <spalte>WGK</spalte>
            <spalte>Volumen/Masse</spalte>
        </spalten>
        <daten>
            <!-- Daten fuer die erste Zeile -->
            <zeile>
                <wert>{stoff1}</wert>
                <wert>{aggregatzustand1}</wert>
                <wert>{wgk1}</wert>
                <wert>{volumen_masse1}</wert>
            </zeile>
            <!-- Daten fuer die zweite Zeile -->
            <zeile>
                <wert>{stoff2}</wert>
                <wert>{aggregatzustand2}</wert>
                <wert>{wgk2}</wert>
                <wert>{volumen_masse2}</wert>
            </zeile>
            <!-- Weitere Daten fuer weitere Zeilen koennen hier hinzugefuegt werden -->
        </daten>
    </tabelle_wassergefaehrdende_stoffe>

    <tabelle_gefaehrdungsstufe>
        <ueberschrift>Ermittlung der Gefaehrdungsstufe der Anlage nach ยง 39 AwSV</ueberschrift>
        <spalte>
            <zeile1>Massgebendes Volumen/Masse</zeile1>
            <zeile2>Massgebende WGK</zeile2>
            <zeile3>Gefaehrdungsstufe</zeile3>
        </spalte>
        <spalte>
            <zeile1>{massg_volumen_masse}</zeile1>
            <zeile2>{massg_wgk}</zeile2>
            <zeile3>{gefaehrdungsstufe}</zeile3>
        </spalte>
    </tabelle_gefaehrdungsstufe>

    <auswahl_aufstellung>
        <ueberschrift>Aufstellung der Anlage</ueberschrift>
        
        <option>
            <kasten aufstellung="false">Unterirdisch</kasten>
        </option>
        
        <option>
            <kasten aufstellung="false">Oberirdisch im Gebaeude</kasten>
        </option>
        
        <option>
            <kasten aufstellung="false">Oberirdisch im Freien</kasten>
        </option>
        
        <option>
            <kasten aufstellung="false">Oberirdisch im Freien mit ueberdachung</kasten>
        </option>
    </auswahl_aufstellung>

    <tabelle_behaelter>
        <ueberschrift>Behaelter</ueberschrift>
        <spalten>
            <spalte>Herstellernummer</spalte>
            <spalte>Stoff</spalte>
            <spalte>Nennvolumen</spalte>
            <spalte>einwandig/doppelwandig</spalte>
            <spalte>Werkstoff</spalte>
            <spalte>bauaufsichtlicher Verwendbarkeitsnachweis</spalte>
        </spalten>
        <daten>
            <!-- Daten fuer die erste Zeile -->
            <zeile>
                <wert>{herstellernummer1}</wert>
                <wert>{stoff1}</wert>
                <wert>{nennvolumen1}</wert>
                <wert>{einwandig_doppelwandig1}</wert>
                <wert>{werkstoff1}</wert>
                <wert>{verwendbarkeitsnachweis1}</wert>
            </zeile>
            <!-- Daten fuer die zweite Zeile -->
            <zeile>
                <wert>{herstellernummer2}</wert>
                <wert>{stoff2}</wert>
                <wert>{nennvolumen2}</wert>
                <wert>{einwandig_doppelwandig2}</wert>
                <wert>{werkstoff2}</wert>
                <wert>{verwendbarkeitsnachweis2}</wert>
            </zeile>
            <!-- Weitere Daten fuer weitere Zeilen koennen hier hinzugefuegt werden -->
        </daten>
    </tabelle_behaelter>

    <tabelle_sicherheitseinrichtungen>
        <ueberschrift>Sicherheitseinrichtungen</ueberschrift>
        <spalten>
            <spalte>Ankreuzen</spalte>
            <spalte>Sicherheitseinrichtung</spalte>
            <spalte>Bauaufsichtlicher Verwendbarkeitsnachweis / sonstige Informationen</spalte>
            <spalte>Rueckhaltevolumen</spalte>
            <spalte>Werkstoff</spalte>
        </spalten>
        <daten>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Leckanzeigegeraet</wert>
                <wert>{verwendbarkeitsnachweis1}</wert>
                <wert>-</wert> <!-- Rueckhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>ueberfuellsicherung</wert>
                <wert>{verwendbarkeitsnachweis2}</wert>
                <wert>-</wert> <!-- Rueckhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Rueckhalteeinrichtung</wert>
                <wert>{verwendbarkeitsnachweis3}</wert>
                <wert>{rueckhaltevolumen}</wert> <!-- Rueckhaltevolumen relevant -->
                <wert>{werkstoff_rueckhalteeinrichtung}</wert> <!-- Werkstoff relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Leckagesensor</wert>
                <wert>{verwendbarkeitsnachweis4}</wert>
                <wert>-</wert> <!-- Rueckhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Loeschwasserrueckhaltung</wert>
                <wert>{verwendbarkeitsnachweis5}</wert>
                <wert>{rueckhaltevolumen_loeschwasser}</wert> <!-- Rueckhaltevolumen relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
            <zeile>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>Sonstige/Organisatorische</wert>
                <wert>{verwendbarkeitsnachweis6}</wert>
                <wert>-</wert> <!-- Rueckhaltevolumen nicht relevant -->
                <wert>-</wert> <!-- Werkstoff nicht relevant -->
            </zeile>
        </daten>
    </tabelle_sicherheitseinrichtungen>

    <tabelle_rohrleitungen>
        <ueberschrift>Rohrleitungen</ueberschrift>
        <spalten>
            <spalte>Bauart</spalte>
            <spalte>Anzahl</spalte>
            <spalte>oberirdisch</spalte>
            <spalte>unterirdisch</spalte>
            <spalte>Werkstoff</spalte>
            <spalte>Bauaufsichtlicher Verwendbarkeitsnachweis / sonstige Informationen</spalte>
        </spalten>
        <daten>
            <zeile>
                <wert>Doppelwandig mit Leckanzeige</wert>
                <wert>{anzahl_doppelwandig}</wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>{werkstoff_doppelwandig}</wert>
                <wert>{verwendbarkeitsnachweis_doppelwandig}</wert>
            </zeile>
            <zeile>
                <wert>Einwandig</wert>
                <wert>{anzahl_einwandig}</wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>{werkstoff_einwandig}</wert>
                <wert>{verwendbarkeitsnachweis_einwandig}</wert>
            </zeile>
            <zeile>
                <wert>Einwandig als Saugleitung</wert>
                <wert>{anzahl_saugleitung}</wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>{werkstoff_saugleitung}</wert>
                <wert>{verwendbarkeitsnachweis_saugleitung}</wert>
            </zeile>
            <zeile>
                <wert>Einwandig im Schutzrohr</wert>
                <wert>{anzahl_schutzrohr}</wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert><kaestchen angekreuzt="false"/></wert>
                <wert>{werkstoff_schutzrohr}</wert>
                <wert>{verwendbarkeitsnachweis_schutzrohr}</wert>
            </zeile>
        </daten>
    </tabelle_rohrleitungen>
    
    <tabelle_abfuellen_umschlage>
        <ueberschrift>Flaeche von Abfuell-/ Umschlaganlagen</ueberschrift>
        <!-- Nicht Teil dieser Arbeit -->
    <tabelle_abfuellen_umschlage>

    <tabelle_entwaesserung>
        <ueberschrift>Entwaesserung der Flaeche</ueberschrift>
        <!-- Nicht Teil dieser Arbeit -->
    <tabelle_entwaesserung>
</formblatt_6.2>
